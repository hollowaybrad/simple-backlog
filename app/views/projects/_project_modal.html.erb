<!-- Project Modal --> 
<div class="modal fade" id="myModal">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
        <h3 class="modal-title" id="myModalLabel">New Project</h3>
      </div>
      <div class="modal-body">
        <%= form_for(@project) do |f| %>
          <div class="form-group">
            <label for="name">Name</label> 
             <%= f.text_field :name, class: 'form-control', placeholder: "Enter project name" %>
          </div>
          <div class="form-group">
            <label for="description">Description</label>
            <%= f.text_area :description, class: 'form-control', placeholder: "Enter project description", cols: 50, rows: 4 %>
          </div>
          <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
          <button type="submit" class="btn btn-info">Save</button>
        <% end %>
      </div>
    </div>
    <!-- /.modal-content -->
  </div>
  <!-- /.modal-dialog -->
</div>
<!-- /.modal -->