<% content_for :head do %>
  <link href="/assets/jumbotron.css" rel="stylesheet">
<% end %>

<div class="navbar navbar-inverse navbar-fixed-top" role="navigation">
  <div class="container">
    <div class="navbar-header">
      <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
        <span class="sr-only">Toggle navigation</span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
    </div>
    <div class="navbar-collapse collapse">
      <ul class="nav navbar-nav">
        <li class="active"><%= link_to 'Home', projects_path%></li>    
        <li><%= link_to 'Users', users_path%></li>
        <li><%= link_to 'Labels', labels_path%></li>
       <li><a href="#about">About</a></li>
      </ul>
    </div><!--/.navbar-collapse -->
  </div>
</div>

<!-- Main jumbotron for a primary marketing message or call to action -->
<div class="jumbotron">
   <div class="container">
    <span style="float: right"> 
      <%= image_tag "Screenshot.png", alt: "screenshot", width: "350", height: "200" %>
    </span>
    <h1>Simple Backlog</h1>
    <p>Get started by creating a new project below</p>
      <button class="btn btn-info btn-lg" data-toggle="modal" data-target="#myModal">New Project 
        <span class="glyphicon glyphicon-blackboard" aria-hidden="true"></span>
      </button>
  </div>
</div>

<div class="container">

  <div class="row">

    <% @projects.each do |project| %>
      <div class="col-md-4">
      
        <h2><%= project.name %></h2>
        <p><%= project.description %></p>
        <p>
          <%= link_to project , class: "btn btn-default" do %>
            Manage  <span class="glyphicon glyphicon-edit" aria-hidden="true"></span>
          <% end %>
        </p>
        </div>
    <% end %>

    </div>

    <hr>

    <footer>
      <p>&copy; 2017 Freedom, Inc.</p>
    </footer>
  </div>
</div> <!-- /container -->


<%= render 'project_modal' %>

