<% content_for :head do %>
  <link href="/assets/jumbotron.css" rel="stylesheet">
<% end %>

<div class="navbar navbar-inverse navbar-fixed-top" role="navigation">
  <div class="container">
    <div class="navbar-header">
      <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
        <span class="sr-only">Toggle navigation</span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
    </div>
    <div class="navbar-collapse collapse">
      <ul class="nav navbar-nav">
        <li class="active"><%= link_to 'Home', projects_path%></li>    
        <li><%= link_to 'Users', users_path%></li>
        <li><%= link_to 'Labels', labels_path%></li>
       <li><a href="#about">About</a></li>
      </ul>
    </div><!--/.navbar-collapse -->
  </div>
</div>

<!-- Main jumbotron for a primary marketing message or call to action -->
<div class="jumbotron">
   <div class="container">
    <h1>Welcome to Simple Backlog!</h1>
    <p>Get started by creating a new project below</p>
      <button class="btn btn-info btn-lg" data-toggle="modal" data-target="#myModal">New Project 
        <span class="glyphicon glyphicon-blackboard" aria-hidden="true"></span>
      </button>
  </div>
</div>

<div class="container">
  <!-- Example row of columns -->
  <div class="row">

    <% @projects.each do |project| %>
      <div class="col-md-4">
      
        <h2><%= project.name %></h2>
        <p><%= project.description %></p>
        <p>
          <%= link_to project , class: "btn btn-default" do %>
            Manage  <span class="glyphicon glyphicon-edit" aria-hidden="true"></span>
          <% end %>
        </p>

        <% if false %>
          <td><%= link_to 'Edit', edit_project_path(project) %></td>
          <td><%= link_to 'Destroy', project, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>

        </div>
    <% end %>

    </div>

    <hr>

    <footer>
      <p>&copy; 2016 FREEDOM, Inc.</p>
    </footer>
  </div>
</div> <!-- /container -->

<!-- Project Modal --> 
<div class="modal fade" id="myModal">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
        <h3 class="modal-title" id="myModalLabel">New Project</h3>
      </div>
      <div class="modal-body">
        <%= form_for(@project) do |f| %>
          <div class="form-group">
            <label for="name">Name</label> 
             <%= f.text_field :name, class: 'form-control', placeholder: "Enter project name" %>
          </div>
          <div class="form-group">
            <label for="description">Description</label>
            <%= f.text_area :description, class: 'form-control', placeholder: "Enter project description", cols: 50, rows: 4 %>
          </div>
          <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
          <button type="submit" class="btn btn-info">Save</button>
        <% end %>
      </div>
    </div>
    <!-- /.modal-content -->
  </div>
  <!-- /.modal-dialog -->
</div>
<!-- /.modal -->

