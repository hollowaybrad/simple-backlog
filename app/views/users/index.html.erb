
<%= render 'menu' %>

<div class="container" style="padding-top: 20px;">
  
    <div class="panel panel-default">
    
      <div class="panel-heading">
        <span class="panel-title"><span class="glyphicon glyphicon-list"></span> Users List</span>   
      </div>

       <div class="panel-body">
       
        <% if notice %>
          <div class="alert alert-info">
            <span class="glyphicon glyphicon-exclamation-sign"></span> <%= notice %>
          </div>
        <% end %>
        
        <p>
          <%= link_to new_user_path , class: "pull-right btn btn-primary" do %>
            <span class="glyphicon glyphicon-plus-sign" aria-hidden="true"></span> Add User
          <% end %>
        </p> 
       
        <table class="table table-striped table-hover">
          <thead>
            <tr>
              <th>First name</th>
              <th>Last name</th>
              <th>Email</th>    
            </tr>
          </thead>

          <tbody>
            <% @users.each do |user| %>
              <tr>
                <td><%= link_to user.first_name, user %></td>
                <td><%= user.last_name %></td>
                <td><%= user.email %></td>
              </tr>
            <% end %>
          </tbody>
        </table>  
                              
      </div>    
    </div>
  </div>
