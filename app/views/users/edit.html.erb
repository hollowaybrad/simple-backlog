<%= render 'menu' %>

<div class="container" style="padding-top: 20px;">

  <ol class="breadcrumb">
    <li><%= link_to 'User List', users_path %></li>
    <li><%= link_to @user.full_name, @user %></li>
    <li class="active">Edit User</li>
  </ol>
    
  <div class="panel panel-default">
    <div class="panel-heading">
      <h3 class="panel-title"><span class="glyphicon glyphicon-wrench"></span> Edit User</h3>
    </div>
    
    <div class="panel-body">

      <% if notice %>
        <div class="alert alert-success">
          <span class="glyphicon glyphicon-exclamation-sign"></span> <%=notice %>
        </div>
      <% end %>

      <% if @user.errors.any? %>
        <ul class="alert alert-danger">
          <% @user.errors.full_messages.each do |message| %>
            <li> <span class="glyphicon glyphicon-exclamation-sign"></span><%= message %></li>
          <% end %>
        </ul>
      <% end %>

      <%= render 'form' %>

    </div>
  </div>
</div>
