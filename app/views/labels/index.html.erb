<%= render 'menu' %>

<div class="container" style="padding-top: 20px;">
  
    <div class="panel panel-default">
    
      <div class="panel-heading">
        <span class="panel-title"><span class="glyphicon glyphicon-list"></span> Label List</span>   
      </div>

       <div class="panel-body">
       
        <% if notice %>
          <div class="alert alert-info">
            <span class="glyphicon glyphicon-exclamation-sign"></span> <%= notice %>
          </div>
        <% end %>
        
        <p>
          <%= link_to new_label_path , class: "pull-right btn btn-primary" do %>
            <span class="glyphicon glyphicon-plus-sign" aria-hidden="true"></span> Add Label
          <% end %>
        </p> 
       
        <table class="table table-striped table-hover">
          <thead>
            <tr>
              <th>Title</th>      
            </tr>
          </thead>

          <tbody>
            <% @labels.each do |label| %>
              <tr>
                <td><%= link_to label.title, label %></td>
              </tr>
            <% end %>
          </tbody>
        </table>  
                              
      </div>    
    </div>
  </div>

