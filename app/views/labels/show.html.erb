
<%= render 'menu' %>

<div class="container" style="padding-top: 20px;">
  
  <ol class="breadcrumb">
    <li><%= link_to 'Label List', labels_path %></li>
    <li class="active"><%= @label.title %></li>
  </ol>
  
  <div class="panel panel-default">
    <div class="panel-heading">
      <span class="glyphicon glyphicon-eye-open"></span> View Label
    </div>
      
    <div class="panel-body">

      <% if notice %>
        <div class="alert alert-info">
          <span class="glyphicon glyphicon-exclamation-sign"></span> <%= notice %>
        </div>
      <% end %>

      <%= form_for(@label, html: {class: "form-horizontal"}) do |f| %>

        <div class="form-group">
          <%= f.label :title , class: 'col-sm-2 control-label'%>
          <div class="col-sm-4 horizontal-form-margin">
            <%= @label.title %>
          </div>
        </div>

        <div class="form-group" style="padding-top:15px">
          <div class="col-sm-10 col-md-offset-2">
            <%= link_to edit_label_path(@label), class: 'btn btn-default' do%> 
              <span class="glyphicon glyphicon-wrench"></span> Edit
            <% end %>

            <%= link_to label_path(@label), method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger' do%> 
              <span class="glyphicon glyphicon-remove"></span> Delete
            <% end %>
          </div>
        </div>
        
      <% end %>
    </div>
  </div>
</div>
