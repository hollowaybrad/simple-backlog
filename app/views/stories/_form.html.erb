 
 <%= form_for ([@project, @story]), html: {class: "form-horizontal"} do |f| %>

  <div class="form-group">
    <%= f.label :title, class: 'col-sm-2 control-label' %>
    <div class="field col-sm-4">
      <%= f.text_field :title, class: 'form-control', placeholder: "Enter story title"  %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :description, class: 'col-sm-2 control-label' %>
    <div class="field col-sm-4">
      <%= f.text_area :description, class: 'form-control', placeholder: "Enter story description", cols: 50, rows: 4 %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :points, class: 'col-sm-2 control-label' %>
    <div class="field col-sm-4">
      <%= f.number_field :points, class: 'form-control', placeholder: "Enter story points" %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :user, class: 'col-sm-2 control-label' %>
    <div class="field col-sm-4">
      <%= f.select :user_id, User.all.collect {|user| [ user.full_name + " - " + user.email, user.id ] }, { include_blank: "Select User" }, class: 'form-control' %>
    </div>
  </div>

   <div class="form-group">
    <%= f.label "Labels", class: 'col-sm-2 control-label' %>
    <div class="field col-sm-4">
      <%= f.select :label_ids, Label.all.collect {|label| [ label.title, label.id ] }, { include_blank: "Select Label" }, class: 'form-control' %>
    </div>
  </div>

  <% if @story.user %>
    <div class="form-group">
      <%= f.label :complete, class: 'col-sm-2 control-label' %>
      <div class="field col-sm-4 horizontal-form-margin">
        <span>
          Yes <%= f.radio_button :complete, true %>
        </span>
        <span style="padding-left: 5px;">
          No <%= f.radio_button :complete, false %>
          </span>
      </div>
    </div>
  <% end %>

 
  <div class="form-group">
    <div class="col-sm-10 col-md-offset-2">
      <button type="submit" class="btn btn-primary">
        <span class="glyphicon glyphicon-ok"></span> Save
      </button>
    </div>
  </div>

<% end %>
